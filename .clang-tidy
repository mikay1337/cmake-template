
Checks: >-
  bugprone-*,
  -bugprone-easily-swappable-parameters,
  clang-analyzer-*,
  cppcoreguidelines-slicing,
  cppcoreguidelines-special-member-functions,
  google-build-explicit-make-pair,
  google-readability-casting,
  llvm-*,
  -llvm-namespace-comment,
  modernize-*,
  -modernize-raw-string-literal,
  performance-*,
  readability-*,
  -readability-convert-member-functions-to-static,
  -readability-function-cognitive-complexity,
  -readability-identifier-length,
  -readability-magic-numbers,
  misc-*,
  -misc-include-cleaner,
  -misc-no-recursion,
  -misc-non-private-member-variables-in-classes,
  -misc-unused-alias-decls,

CheckOptions:
  readability-identifier-naming.ClassCase         : CamelCase
  readability-identifier-naming.StructCase        : CamelCase 
  readability-identifier-naming.EnumCase          : CamelCase 
  readability-identifier-naming.FunctionCase      : CamelCase 
  readability-identifier-naming.ParameterCase     : lower_case 
  readability-identifier-naming.EnumConstantCase  : CamelCase 
  readability-identifier-naming.NamespaceCase     : lower_case
  readability-identifier-naming.MemberCase        : lower_case
  readability-identifier-naming.PrivateMemberSuffix : '_'
  readability-identifier-naming.ProtectedMemberSuffix : '_'

  # Ignore main function name
  readability-identifier-naming.IgnoreMainLikeFunctions : '1'

  # Force brace initialization
  modernize-use-braced-init-list.StrictMode : true

  # Avoid magic numbers unless in constexpr or enums
  cppcoreguidelines-avoid-magic-numbers.IgnoreEnums     : '1' 
  cppcoreguidelines-avoid-magic-numbers.IgnoreExpressions: '1' 

  # Prefer smart pointers over raw new/delete
  modernize-use-unique-ptr.CheckSmartPointers           : '1' 
  modernize-use-nullptr.NullMacros                      : 'NULL' 

  # Force using override keyword on virtual methods
  modernize-use-override.AllowOverrideAndFinal          : '1' 

  # Performance tuning: prefer emplace_back over push_back
  performance-move-const-arg.WarnOnAllArgumentCopies    : '1' 

WarningsAsErrors: '*'